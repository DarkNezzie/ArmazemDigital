<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">
  <title>Armazém Digital</title>
  <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="/style.css">
    <style>
     table.dataTable thead {
           background-color:#7952b3;
           color:aliceblue;
       }  
    </style>
</head>
<body>
    <nav>
        <h4><a href="/">Armazém Digital</a></h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li>
        </ul>
    </nav>
    <form class="row gx-3 gy-2 align-items-center" style="padding-top: 50px" action="/auth/adicionarEquipamento " method = "POST">
        
        <div class="col-sm-2" >
            <label for="sap" class="form-label">SAP</label>
            <input type="text" class="form-control" placeholder="SAP" id="sap" name="sap">
        </div>
        <div class="col-sm-2">
            <label for="rfid_id" class="form-label">RFID-ID</label>
            <input type="text" class="form-control" placeholder="RFID-ID" id="rfid_id" name="rfid_id">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    <div class="container-fluid" style="padding: 50px">
        <div class="row">
            <div class="col">
               <table id="tabelaDados" class="table table-striped table-bordered" style="width:100%">
               <thead>
                 <tr>
                    <th>ID</th>
                    <th>SAP</th>
                    <th>Denominacao</th>                                
                    <th>Classe</th>        
                    <th>Sub Classe</th>  
                    <th>Estado Vida</th>  
                    <th>Número de Serie</th>  
                    <th>Local</th>  
                </tr>
               </thead>
               <tbody>
               </tbody>
               </table> 
            </div>
        </div>
    </div>

<script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap5.min.js"></script>        
<script>
     $(document).ready(function() {   
         var url = 'http://localhost:5000/data';

          $('#tabelaDados').DataTable({            
              "ajax":{
                  "url": url,
                  "dataSrc":""
              },
              "columns":[
                  {"data":"eq_id"},
                  {"data":"sap"},
                  {"data":"denominacao"},
                  {"data":"classe"},
                  {"data":"sub_Classe"},
                  {"data":"estado_Vida"},
                  {"data":"n_Serie"},
                  {"data":"id_local"},
              ],
              "columnDefs":[{
                  render(v){
                      return Number(v).toFixed(2)
                  }
              }]
          });
    });
</script>
</body>
</html>